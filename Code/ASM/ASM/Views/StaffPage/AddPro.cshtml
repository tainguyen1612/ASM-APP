@model ASM.Models.Profile_User
@{
    ViewBag.Title = "AddPro";
    Layout = "~/Views/Shared/_LayoutPage2.cshtml";
}

<div id="content-header">
    <div id="breadcrumb"> <a href="#" title="Go to Home" class="tip-bottom"><i class="icon-home"></i> Home</a> <a href="#" class="current">Add Account</a> </div>
    <h1>Add Account</h1>
</div>
<div class="container-fluid">
    <hr>
    <div class="row-fluid">
        <div class="span12">
            <div class="widget-box">
                <div class="widget-content nopadding">
                    <form action="AddPro" method="POST" class="form-horizontal">
                        <div class="control-group">
                            <label class="control-label">UserID</label>
                            <div class="controls">
                                <div style="width : 30%">
                                    @Html.DropDownListFor(a => a.UserID , new SelectList(Model.IdCollection, "UserID" , "UserID","Select"))
                                </div> 
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label">Full Name</label>
                            <div class="controls">
                                @Html.TextBoxFor(x => x.Full_Name)
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label">Address</label>
                            <div class="controls">
                                @Html.TextBoxFor(x => x.Address)
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label">Phone</label>
                            <div class="controls">
                                @Html.TextBoxFor(x => x.Phone)
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label">Date of Birth</label>
                            <div class="controls">
                                @Html.TextBoxFor(x => x.DateOfBirth)
                            </div>
                        </div>
                        <div class="form-actions">
                            <button type="submit" class="btn btn-success">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

