@model IEnumerable<ASM.Models.User_Account>

@{
    ViewBag.Title = "TraineeAccount";
    Layout = "~/Views/Shared/_LayoutPage2.cshtml";
}

<div id="content-header">
    <div id="breadcrumb"> <a href="#" title="Go to Home" class="tip-bottom"><i class="icon-home"></i> Home</a> <a href="#" class="current">Account Trainee</a> </div>
    <h1>Account Trainee</h1>
</div>
<div class="container-fluid">
    <hr style="margin : 10px 0;">
    <div class="row-fluid">
        <div class="span12">
            <div class="widget-box" style="margin-top: 0px;">
                <div class="widget-title">
                    <span class="icon"><i class="icon-th"></i></span>
                    <button type="button" class="btn btn-default">@Html.ActionLink("Add Account", "AddAccountTrainee", "StaffPage")</button>
                    <h5>Data table</h5>
                </div>
                <div class="widget-content nopadding">
                    <table class="table table-bordered ">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Username</th>
                                <th>Password</th>
                                <th>Position</th>
                                <th colspan="2">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UserID)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UserName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Password)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Position)
                                    </td>
                                    <td class="center"><a href="@Url.Action("EditAccountTrainee", "StaffPage" , new {id = item.UserID })">Edit</a></td>
                                    <td class="center"><a href="@Url.Action("DeleteAccountTrainee", "StaffPage" , new {id = item.UserID })">Delete</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
